<Window x:Class="Prueba_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prueba_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Send" HorizontalAlignment="Left" Margin="291,231,0,0" VerticalAlignment="Top" Click="Callback" Height="49" Width="156" Background="#FF6B69B3" BorderBrush="#FFEA0000" FontFamily="Tahoma" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <Label x:Name="Counter" Content="0" HorizontalAlignment="Left" Margin="358,163,0,0" VerticalAlignment="Top" FontFamily="Segoe UI Light" FontSize="24" RenderTransformOrigin="1.252,0.573"/>
        <ComboBox x:Name="ComboBox" HorizontalAlignment="Left" Height="26" Margin="60,90,0,0" VerticalAlignment="Top" Width="87" SelectionChanged="ComboBox_SelectionChanged" DropDownOpened="Drop_Down"/>
        <Label x:Name="Indicador" HorizontalAlignment="Left" Margin="157,98,0,0" VerticalAlignment="Top" Background="#FFF90000"/>
        <ProgressBar HorizontalAlignment="Left" Height="9" Margin="291,349,0,0" VerticalAlignment="Top" Width="156"/>
        <TextBox x:Name="Data_send" HorizontalAlignment="Left" Margin="300,297,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" RenderTransformOrigin="0.5,0.5" Height="35" FontFamily="Times New Roman" FontSize="20">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.366"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

    </Grid>
</Window>
